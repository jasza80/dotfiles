# Set shell to ZSH
echo "Enter password to set shell to zsh"
chsh -s $(which zsh)

# Install core packages
sudo apt-get install xclip git tmux skype quassel-client shutter gimp curl python-pip python3-pip silversearcher-ag
sudo apt-get install ubuntu-restricted-extras
sudo apt install unity-tweak-tool
sudo apt-get remove dell-super-key  # this package is dumb...

# Manually do...
# Install NeoVim (https://github.com/neovim/neovim/wiki/Installing-Neovim)
# Install hub (https://github.com/github/hub)

echo "Installing setuptools, pip, virtualenv, and Virtualenvwrapper"
sudo apt-get install python-setuptools virtualenvwrapper

echo "CapsLock -> Ctrl"
gsettings set org.gnome.desktop.input-sources xkb-options "['caps:ctrl_modifier']"

echo "Setting NeoVim as the default editor"
sudo update-alternatives --install /usr/bin/vi vi /usr/bin/nvim 60
sudo update-alternatives --install /usr/bin/vim vim /usr/bin/nvim 60
sudo update-alternatives --install /usr/bin/editor editor /usr/bin/nvim 60
echo 1 | sudo update-alternatives --config vi
echo 1 | sudo update-alternatives --config vim
echo 1 | sudo update-alternatives --config editor

sudo apt-get install nautilus-dropbox
